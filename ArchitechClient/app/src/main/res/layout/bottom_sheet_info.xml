<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#1F1E20">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_bg"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Floor Plan Info"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="4dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Percentage Covered Area: "
        android:textColor="#fff"/>
    <TextView
        android:id="@+id/informationPercentageCoveredArea"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="#fff"

        />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Number of bedrooms: "
        android:textColor="#fff"/>
    <TextView
        android:id="@+id/informationNumberOfBedrooms"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="#fff"

        />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Number of bathrooms: "
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/informationNumberOfBathrooms"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#fff"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Cost Estimate: "
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/informationCostEstimate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#fff"

            />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

</LinearLayout>

</RelativeLayout>