<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#1F1E20">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >



        <LinearLayout android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="#1F1E20"
            android:orientation="vertical"
            android:weightSum="12">
            <Button
                android:id="@+id/logout_imageUpload"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Logout"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="10dp">
            </Button>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="20dp"
                android:id="@+id/inputImg"

                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Floorplan"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="#F9F7FB"
                android:layout_gravity="center"
                >
            </TextView>
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="selectImage"
                android:layout_gravity="center_horizontal"
                android:id="@+id/uploadButton"
                android:background="@drawable/upload_icon"
                android:backgroundTint="#fff"
                android:layout_marginBottom="30dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:weightSum="2">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="15dp"
                    android:padding="2dp"
                    android:textAlignment="center"
                    android:background="@drawable/round_rectangle_field"
                    android:hint="Length in feet"
                    android:textColorHint="#C3C3C3"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:gravity="center_horizontal"
                    android:id="@+id/floorPlanLength"
                    android:layout_weight="1"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="15dp"
                    android:padding="2dp"
                    android:textAlignment="center"
                    android:background="@drawable/round_rectangle_field"
                    android:hint="Width in feet"
                    android:textColorHint="#C3C3C3"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:gravity="center_horizontal"
                    android:id="@+id/floorPlanWidth"
                    android:layout_weight="1"/>
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp"
                android:padding="2dp"
                android:textAlignment="center"
                android:background="@drawable/round_rectangle_field"
                android:hint="Enter Ip address e.g. 192.168.1.1"
                android:textColorHint="#C3C3C3"
                android:textColor="#000"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                android:id="@+id/ipAddress"/>

            <Button
                android:layout_gravity="center_horizontal"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/round_rectangle_button2"
                android:textColor="#fff"
                android:text="Upload"
                android:id="@+id/uploadToServerBtn"/>
            <TextView
                android:layout_marginVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/responseText"
                android:textColor="#ffff"
                />

        </LinearLayout>


        <ProgressBar

            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>




    </RelativeLayout>
</ScrollView>