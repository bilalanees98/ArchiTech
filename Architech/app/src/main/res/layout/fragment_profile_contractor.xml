<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#fff">
        <LinearLayout
            android:id="@+id/topBarProfileCustomer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Profile"
                android:textSize="32dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#000"
                android:layout_marginBottom="5dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#000"/>
        </LinearLayout>

        <!--Info Section-->
        <LinearLayout
            android:id="@+id/profileCustomerInfo"
            android:layout_below="@+id/topBarProfileCustomer"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="50dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageContractorProfileFragment"

                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/avatar"
                app:civ_border_color="#000"
                app:civ_border_width="1dp"/>

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_gravity="center_vertical"

                android:orientation="vertical"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                >
                <TextView

                    android:id="@+id/nameContractorProfileFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="..."
                    android:textColor="#000"
                    android:maxWidth="180dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/emailContractorProfileFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:maxWidth="150dp"
                    android:text="..."
                    android:fontFamily="@font/roboto_thin"
                    android:textSize="12sp"

                    app:drawableStartCompat="@drawable/ic_email"

                    android:drawablePadding="5dp"

                    />
                <TextView
                    android:id="@+id/phoneNoContractorProfileFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="..."
                    android:fontFamily="@font/roboto_thin"
                    android:textSize="12sp"
                    android:maxWidth="180dp"

                    android:textColor="@color/black"

                    app:drawableStartCompat="@drawable/ic_phone"

                    android:drawablePadding="5dp"

                    />

            </LinearLayout>


            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/logoutButtonContractor"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:text="logout"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:padding="3dp"
                android:textSize="10sp"
                android:fontFamily="@font/roboto_light"
                android:background="@drawable/round_button"
                />


        </LinearLayout>


        <TextView
            android:layout_marginHorizontal="25dp"
            android:layout_below="@id/profileCustomerInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost Structure"
            android:textSize="28sp"
            android:textColor="#000"
            android:fontFamily="@font/roboto_regular"/>

        <LinearLayout

            android:layout_below="@+id/profileCustomerInfo"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/row_card"
            android:padding="15dp"
            android:layout_marginTop="65dp"
            android:layout_marginHorizontal="25dp"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp"
                android:paddingHorizontal="35dp"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category 1"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="18sp"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/rateOneContractorProfileFragment"
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:fontFamily="@font/roboto_light"
                        android:textSize="14sp"
                        android:textColor="#000"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginVertical="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category 2"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="18sp"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/rateTwoContractorProfileFragment"
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:fontFamily="@font/roboto_light"
                        android:textSize="14sp"
                        android:textColor="#000"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginVertical="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category 3"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="18sp"
                        android:textColor="#000"/>
                    <TextView
                        android:id="@+id/rateThreeContractorProfileFragment"
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:fontFamily="@font/roboto_light"
                        android:textSize="14sp"
                        android:textColor="#000"/>

                </LinearLayout>

                <Button
                    android:id="@+id/editButtonContractorProfileFragment"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/round_rectangle_button"
                    android:text="Edit"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="#fff"
                    android:textAllCaps="false"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    />

            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>

</ScrollView>