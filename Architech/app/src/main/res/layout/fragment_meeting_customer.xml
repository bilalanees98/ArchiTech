<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">





    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarMeetingCustomer"
        android:layout_below="@+id/topBarMeetingCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutMeetingCustomer"
        android:layout_below="@+id/topBarMeetingCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabSelectedTextColor="#000"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabIndicatorHeight="3dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="25dp"
        >

        <com.google.android.material.tabs.TabItem
            android:id="@+id/confirmedTabCustomer"
            android:background="#efe322"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Confirmed"
            />
        <com.google.android.material.tabs.TabItem
            android:id="@+id/requestsTabCustomer"
            android:background="#efe322"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Requested"/>


    </com.google.android.material.tabs.TabLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerMeetingCustomer"
        android:layout_below="@+id/tabLayoutMeetingCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

