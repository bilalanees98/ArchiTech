<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/floorPlanRow"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/row_card"
        android:padding="15dp"
        android:layout_margin="10dp"
        >

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/row_cover_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            />

        <View
            android:layout_width="15dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         >
            <TextView
                android:id="@+id/row_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title Of Floor Plan"
                android:fontFamily="@font/roboto_medium"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="by "
                    android:fontFamily="@font/roboto_light"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/row_owner_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="Someone Probably"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Size:                  "
                        android:fontFamily="@font/roboto_light"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_marginTop="8dp"
                        android:id="@+id/row_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="90 x 50"
                        android:fontFamily="@font/roboto_light"
                        android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bedrooms:       "
                    android:fontFamily="@font/roboto_light"
                    android:textSize="12sp"/>
                <TextView
                        android:id="@+id/row_bedrooms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:fontFamily="@font/roboto_light"
                        android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bathrooms:      "
                    android:fontFamily="@font/roboto_light"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/row_bathrooms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:fontFamily="@font/roboto_light"
                    android:textSize="12sp"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cars Capacity: "
                    android:fontFamily="@font/roboto_light"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/row_cars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:fontFamily="@font/roboto_light"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>