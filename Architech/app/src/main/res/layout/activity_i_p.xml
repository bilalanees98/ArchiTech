<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IPActivity">
    <LinearLayout
        android:id="@+id/ll_ipActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IP Address:"
                android:textSize="80px"
                />
            <EditText
                android:id="@+id/ipAddress_ipActivity"
                android:layout_weight="1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="192.168.18.8"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:textSize="80px"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Port No:"
                android:textSize="80px" />
            <EditText
                android:id="@+id/portNo_ipActivity"
                android:layout_weight="1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="5001"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:textSize="80px"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/submitBtn_ipActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@+id/ll_ipActivity"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_rectangle_button"
        android:fontFamily="@font/roboto_light"
        android:textColor="#fff"
        />

</RelativeLayout>