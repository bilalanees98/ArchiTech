<?xml version="1.0" encoding="utf-8"?>



<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer.SignupCustomer">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >

        <LinearLayout
            android:id="@+id/topBarSignupLoginCustomer"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="10"
            android:elevation="20dp"
            android:layout_marginBottom="10dp"
            >


            <TextView
                android:id="@+id/titleFloorPlanDetails"
                android:paddingVertical="16dp"
                android:layout_width="0dp"
                android:layout_weight="8.25"
                android:layout_height="match_parent"
                android:text="Login"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#121111"
                android:gravity="center_vertical"
                android:textSize="26sp"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"

                >

            </TextView>


        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/topBarSignupLoginCustomer1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Login"
                android:textSize="32dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#000"
                android:layout_marginBottom="5dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#000"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/signupFormCustomer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topBarSignupLoginCustomer"
            android:layout_marginTop="100dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="30dp"
            android:background="@drawable/form_card"
            android:layout_marginHorizontal="10dp"
            >
            <EditText
                android:id="@+id/email_input_customer_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username or Email"
                android:layout_marginVertical="7dp"
                android:textSize="16sp"

                >
            </EditText>

            <EditText
                android:id="@+id/password_input_customer_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:layout_marginVertical="7dp"
                android:textSize="16sp"
                android:inputType="textPassword"
                >
            </EditText>

            <TextView
                android:id="@+id/forgotPasswordText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Forgot Password?"
                android:textSize="10sp"
                android:layout_margin="13dp"/>

            <Button
                android:id="@+id/loginButtonCustomer"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/round_rectangle_button"
                android:text="Login"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_light"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/unityActivityBtn"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="pls click"
                android:visibility="gone"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signupFormCustomer"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account? "
                android:fontFamily="@font/roboto_light"
                android:textColor="#000"
                />

            <TextView
                android:id="@+id/signupTextOnLoginCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/roboto_light"
                android:text="Sign Up"
                android:textAllCaps="false"/>



        </LinearLayout>
        <TextView
            android:id="@+id/skip_button_login"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/roboto_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Skip"
            android:layout_centerHorizontal="true"
            />



        <ProgressBar

            android:id="@+id/progressBarLoginCustomer"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</ScrollView>