<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:background="@drawable/row_card"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="7dp"
    android:padding="15dp"

    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/linear_layoutrow_requested_meeting_contractor"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/nameContractorRequestedMeetingContractorRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maashter Builders"
            android:textColor="#000"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginVertical="5dp"
            />

        <TextView
            android:id="@+id/timeRequestedMeetingContractorRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scheduled for 4:00pm - 04/10/20"
            android:textColor="#000"
            android:fontFamily="@font/roboto_light"
            android:layout_marginVertical="2dp"
            />

        <TextView
            android:id="@+id/statusRequestedMeetingContractorRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:textColor="#000"
            android:fontFamily="@font/roboto_light"
            android:layout_marginVertical="2dp"
            />




    </LinearLayout>

    <TextView
        android:id="@+id/cancelTextRequestedMeetingContractorRow"
        android:layout_below="@id/linear_layoutrow_requested_meeting_contractor"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decline Request"
        android:textColor="#EA0000"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_medium"
        android:paddingVertical="10dp"
        />
    <TextView
        android:id="@+id/confirmTextRequestedMeetingContractorRow"
        android:layout_below="@id/linear_layoutrow_requested_meeting_contractor"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Request"
        android:textColor="#00289F"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_medium"
        android:paddingVertical="10dp"
        />



</RelativeLayout>
